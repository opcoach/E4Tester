<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="robotRunnerApplication"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="com.opcoach.e4tester.robot.E4RobotTesterApplication">
         </run>
      </application>
   </extension>
   <extension
         id="robotProduct"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.opcoach.e4tester.robot.robotRunnerApplication"
            name="Robot Product">
             <property
               name="applicationXMI"
               value="platform:/plugin/com.opcoach.e4tester.core/E4TesterApplication.e4xmi">
         </property>
      </product>
   </extension>

</plugin>
